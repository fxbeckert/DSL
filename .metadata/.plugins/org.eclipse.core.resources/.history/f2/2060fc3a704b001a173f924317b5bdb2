		return ''' public class MAIN{
			public static void main(String [] args){
				String current = "«init.name»";
				String finalS = "«finalState.name»";
				System.out.println("Debut");
				System.out.println("etat courent : " + current);
				while(!current.equals(finalS) {
					«FOR tr : fsm.transition»
						if (current.equals("«tr.state1.name»")) {
							current = "«tr.state2.name»";
						}
					«ENDFOR»
